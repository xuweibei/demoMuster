@import 'movie-list/movie-list-template';

.container{
  background:#f2f2f2;
}

.movies-template{
  margin-bottom:30rpx;
}

.search{
  background-color:#f2f2f2;
  height:80rpx;
  width:100%;
  display:flex;
  flex-direction:row;
}

.search-img{
  margin:auto 0 auto 20rpx;
}

.search input{
  height:100%;
  width:600rpx;
  margin-left:20rpx;
  font-size:28rpx;
}

.placeholder {
  font-size:14px;
  color:#d1d1d1;
  margin-left:20rpx;
}

.close-search{
  font-size:36rpx;
  margin:16rpx;
  color:#ccc;
  border:1px solid #ccc;
  border-radius: 50%;
  width: 50rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
}